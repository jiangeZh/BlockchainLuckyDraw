<div class="form-group" ng-controller="SendSafeMessageController">
    <label for="prizeInfo" class="col-sm-3 control-label">奖品信息</label>
    <div class="col-sm-9">
        <div ng-repeat="onePrizeInfo in fchat.prizeInfos">
            <div class="form-group">
                <div class="col-sm-8">
                  <input required="required" type="text" class="form-control unfocus" ng-model="onePrizeInfo.value"
                  id="onePrizeInfo{{$index + 1}}" name="onePrizeInfo{{$index + 1}}" data-toggle="modal" data-target="#myModal{{$index+1}}" readonly="readonly"/>
                  <span class="help-block">信息{{$index + 1}}</span>
                </div>
                <div class="col-sm-4">
                  <button type="button" class="btn btn-default" ng-click="fchat.incrPrizeInfo($index)">
                    <span class="glyphicon glyphicon-plus"></span>
                  </button>
                  <button type="button" class="btn btn-default" ng-click="fchat.decrPrizeInfo($index)" ng-show="fchat.canDescPrizeInfo">
                    <span class="glyphicon glyphicon-remove"></span>
                  </button>
                  <button type="button" class="btn btn-default" ng-show="!fchat.canDescPrizeInfo">
                    <span class="glyphicon glyphicon-remove"></span>
                  </button>
                </div>
            </div>

            <div class="modal fade" id="myModal{{$index+1}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel{{$index+1}}">奖品信息</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="prizeLevel" class="col-sm-2 control-label">奖品等级</label>
                      <div class="col-sm-10">
                        <input required="required" type="number" min="0" class="form-control unfocus" id="prizeLevel{{$index+1}}" name="prizeLevel{{$index+1}}" placeholder="1" value="1">
                        <span class="help-block">奖品等级</span>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="prizeDesc" class="col-sm-2 control-label">奖品描述</label>
                      <div class="col-sm-10">
                        <input required="required" type="text" class="form-control unfocus" id="prizeDesc{{$index+1}}" name="prizeDesc{{$index+1}}" placeholder="iPhone7" value="iPhone7">
                        <span class="help-block">奖品描述</span>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="prizeNum" class="col-sm-2 control-label">奖品数量</label>
                      <div class="col-sm-10">
                        <input required="required" type="number" min="1" class="form-control unfocus" id="prizeNum{{$index+1}}" name="prizeNum{{$index+1}}" placeholder="1" value="1">
                        <span class="help-block">奖品数量</span>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary" ng-click="fchat.setPrizeInfo($index)"><span class="glyphicon glyphicon-floppy-disk"></span>保存</button>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <input type="hidden" id="prizeInfos" name="prizeInfos" value="{{fchat.combinePrizeInfos()}}" />
    </div>
</div>



